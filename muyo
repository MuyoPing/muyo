            myHRP.CFrame = targetHRP.CFrame + Vector3.new(0, 3, 0)

            Rayfield:Notify({
                Title = "텔레포트 성공",
                Content = SelectedPlayer.DisplayName .. " (" .. SelectedPlayer.Name .. ") 님에게 이동했습니다.",
                Duration = 3
            })
        else
            Rayfield:Notify({
                Title = "텔레포트 실패",
                Content = "플레이어를 선택하지 않았거나 위치를 찾을 수 없습니다.",
                Duration = 3
            })
        end
    end
})


